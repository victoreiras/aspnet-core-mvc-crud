@model Contato

<form method="post" asp-controller="Contato" asp-action="Editar">

    <div class="form-row">

        <div class="form-group col-md-6">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" id="Nome" asp-for="Nome" placeholder="Nome">
            <span asp-validation-for="Nome"></span>
        </div>

        <div class="form-group col-md-6">
            <label for="Sobrenome">Sobrenome</label>
            <input type="text" class="form-control" id="Sobrenome" asp-for="Sobrenome" placeholder="Sobrenome">
            <span asp-validation-for="Sobrenome"></span>
        </div>

    </div>

    <div class="form-group">
        <label for="Telefone">Telefone</label>
        <input type="text" class="form-control" id="Telefone" asp-for="Telefone" placeholder="Telefone (xx)xxxxxxxx">
        <span asp-validation-for="Telefone"></span>
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" class="form-control" id="Email" asp-for="Email" placeholder="Email">
        <span asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-success mb-3"><i class="bi bi-pencil-square mx-2"></i>Editar</button>
        <a class="btn btn-primary mb-3" asp-controller="Contato" asp-action="Listar"><i
                class="bi bi-skip-backward-fill mx-2"></i>Voltar</a>
    </div>

</form>